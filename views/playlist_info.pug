extends layout.pug

block content
  h1= playlistName

  table 
    each t in playlistTracks
      tr 
        - const artist_name = t.track.artists[0].name
        - const track_name = t.track.name
        - const track_preview = t.track.preview_url
        - const artist_id = t.track.artists[0].id
        - const track_id = t.track.id 

        td #{artist_name}
        td: a(href=`/recommendations?artist=${artist_id}&track=${track_id}`) #{track_name}
        td: a(href=track_preview) Preview
